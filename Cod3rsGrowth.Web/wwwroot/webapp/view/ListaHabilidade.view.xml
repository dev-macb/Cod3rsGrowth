<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="coders-growth.controller.ListaHabilidade"
>
	<Page 
        id="paginaListaHabilidade"
		title="{i18n>ListaHabilidade.titulo}"
		showNavButton="true"
		navButtonPress="navegarPara('home')"
		class="sapUiResponsiveContentPadding"
    >
		<content>
			<Button icon="sap-icon://add" text="{i18n>ListaHabilidade.botaoAdicionar}" />
			<List id="listaHabilidade" items="{ path: '/' }" growing="true" growingThreshold="10">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>ListaHabilidade.tituloLista}" />
						<ToolbarSpacer />
						<SearchField id="filtroNome" width="30%" liveChange="aoFiltrarHabilidadePorNome" />
						<Button id="btnFiltroHabilidade" icon="sap-icon://filter" press="aoAbrirFiltrosHabilidade" />
					</Toolbar>
				</headerToolbar>
				<items>
					<StandardListItem
						title="{nome}"
						description="{descricao}"
						type="Navigation"
						press=".onListItemPressed"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>