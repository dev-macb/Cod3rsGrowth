<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="coders-growth.controller.AdicionarPersonagem"
>
    <Page 
        id="paginaAdicionarPersonagem"
        title=" Personagem"
        showNavButton="true"
        navButtonPress="__navegarPara('personagens')"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <Panel id="painelDetalhePersonagem" width="auto" class="sapUiLargeMargin sapUiResponsiveContentPadding" >
                <headerToolbar>
                    <Toolbar>
                        <Title text="Adicionar" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <VBox>
                        <VBox class="sapUiSmallMarginBottom">
                            <Label text="{i18n>AdicionarPersonagem.nome}" />
                            <Input id="inputNome" placeholder="Digite o nome do personagem..." valueStateText="O nome é obrigatório. Deve ter no mínimo 3 caracteres e no máximo 50." />
                        </VBox>
        
                        <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                            <VBox width="30%">
                                <Label text="{i18n>AdicionarPersonagem.vida}" />
                                <Input id="inputVida" type="Number" placeholder="Insira o valor da vida..." valueStateText="A vida deve estar entre 0 e 100." />
                            </VBox>
                            <VBox width="30%">
                                <Label text="{i18n>AdicionarPersonagem.energia}" />
                                <Input id="inputEnergia" type="Number" />
                            </VBox>
                            <VBox width="30%">
                                <Label text="{i18n>AdicionarPersonagem.velocidade}" />
                                <Input id="inputVelocidade" type="Number" />
                            </VBox>
                        </HBox>
        
                        <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                            <VBox width="47%">
                                <Label text="{i18n>AdicionarPersonagem.forca}" />
                                <ComboBox id="comboForca" width="100%" placeholder="Selecione a força...">
                                    <items>
                                        <core:Item key="fraco" text="Fraco" />
                                        <core:Item key="medio" text="Médio" />
                                        <core:Item key="bom" text="Bom" />
                                        <core:Item key="excepcional" text="Excepcional" />
                                        <core:Item key="extraordinario" text="Extraordinário" />
                                    </items>
                                </ComboBox>
                            </VBox>
                            <VBox width="47%">
                                <Label text="{i18n>AdicionarPersonagem.inteligencia}" />
                                <ComboBox id="comboInteligencia" width="100%" placeholder="Selecione a inteligência...">
                                    <items>
                                        <core:Item key="fraco" text="Fraco" />
                                        <core:Item key="medio" text="Médio" />
                                        <core:Item key="bom" text="Bom" />
                                        <core:Item key="excepcional" text="Excepcional" />
                                        <core:Item key="extraordinario" text="Extraordinário" />
                                    </items>
                                </ComboBox>
                            </VBox>
                        </HBox>
        
                        <VBox class="sapUiSmallMarginBottom">
                            <Label text="{i18n>AdicionarPersonagem.eVilao}" />
                            <RadioButtonGroup columns="2">
                                <buttons>
                                    <RadioButton id="radioHeroi" text="{i18n>AdicionarPersonagem.heroi}" selected="true" />
                                    <RadioButton id="radioVilao" text="{i18n>AdicionarPersonagem.vilao}" />
                                </buttons>
                            </RadioButtonGroup>
                        </VBox>
                        
                        <HBox justifyContent="End">
                            <Button text="{i18n>AdicionarPersonagem.botaoSalvar}" press="adicionarPersonagem" />
                        </HBox>
                    </VBox>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>