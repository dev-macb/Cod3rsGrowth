<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    controllerName="coders-growth.controller.AdicionarPersonagem"
>
    <Page 
        id="paginaAdicionarPersonagem"
        title=" Personagem"
        showNavButton="true"
        navButtonPress="__navegarPara('personagens')"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <Panel id="painelDetalhePersonagem" width="auto" class="sapUiLargeMargin sapUiResponsiveContentPadding" >
                <headerToolbar>
                    <Toolbar>
                        <Title text="Adicionar" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <content>
                    <VBox>
                        <VBox class="sapUiSmallMarginBottom">
                            <Label text="{i18n>AdicionarPersonagem.nome}" />
                            <Input id="inputNome" value="{personagem>/nome}" placeholder="Digite o nome do personagem..." valueStateText="O nome é obrigatório. Deve ter no mínimo 3 caracteres e no máximo 50." liveChange =".aoDigitarNoInpunt" />
                        </VBox>
                    
                        <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                            <VBox width="30%">
                                <Label text="{i18n>AdicionarPersonagem.vida}" />
                                <Input id="inputVida" value="{ path: 'personagem>/vida', type: 'sap.ui.model.type.Integer', constraints: { minimum: 0, maximum: 100 } }" type="Number" placeholder="Insira o valor da vida..." valueStateText="A vida deve estar entre 0 e 100." liveChange =".aoDigitarNoInpunt" />
                            </VBox>
                            <VBox width="30%">
                                <Label text="{i18n>AdicionarPersonagem.energia}" />
                                <Input id="inputEnergia" value="{ path: 'personagem>/energia', type: 'sap.ui.model.type.Integer', constraints: { minimum: 0, maximum: 50 } }" type="Number" placeholder="Insira o valor da energia..." valueStateText="A energia deve estar entre 0 e 50." liveChange =".aoDigitarNoInpunt" />
                            </VBox>
                            <VBox width="30%">
                                <Label text="{i18n>AdicionarPersonagem.velocidade}" />
                                <Input id="inputVelocidade" value="{ path: 'personagem>/velocidade', type: 'sap.ui.model.type.Float', constraints: { minimum: 0, maximum: 2 } }" type="Number" placeholder="Insira o valor da velocidade..." valueStateText="A velocidade deve estar entre 0 e 2." liveChange =".aoDigitarNoInpunt" />
                            </VBox>
                        </HBox>
                    
                        <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                            <VBox width="47%">
                                <Label text="{i18n>AdicionarPersonagem.forca}" />
                                <ComboBox id="comboForca" selectedKey="{personagem>/forca}" width="100%" placeholder="Selecione a força..." valueStateText="A força deve ser um valor válido de CategoriasEnum." change =".aoDigitarNoInpunt">
                                    <items>
                                        <core:Item key="0" text="Fraco" />
                                        <core:Item key="1" text="Médio" />
                                        <core:Item key="2" text="Bom" />
                                        <core:Item key="3" text="Excepcional" />
                                        <core:Item key="4" text="Extraordinário" />
                                    </items>
                                </ComboBox>
                            </VBox>
                            <VBox width="47%">
                                <Label text="{i18n>AdicionarPersonagem.inteligencia}" />
                                <ComboBox id="comboInteligencia" selectedKey="{personagem>/inteligencia}" width="100%" placeholder="Selecione a inteligência..." valueStateText="A inteligência deve ser um valor válido de CategoriasEnum." change =".aoDigitarNoInpunt">
                                    <items>
                                        <core:Item key="0" text="Fraco" />
                                        <core:Item key="1" text="Médio" />
                                        <core:Item key="2" text="Bom" />
                                        <core:Item key="3" text="Excepcional" />
                                        <core:Item key="4" text="Extraordinário" />
                                    </items>
                                </ComboBox>
                            </VBox>
                        </HBox>
                    
                        <VBox class="sapUiSmallMarginBottom">
                            <Label text="{i18n>AdicionarPersonagem.eVilao}" />
                            <RadioButtonGroup columns="2">
                                <buttons>
                                    <RadioButton id="radioHeroi" selected="{= !${personagem>/eVilao} }" text="{i18n>AdicionarPersonagem.heroi}" />
                                    <RadioButton id="radioVilao" selected="{personagem>/eVilao}" text="{i18n>AdicionarPersonagem.vilao}" />
                                </buttons>
                            </RadioButtonGroup>
                        </VBox>
            
                        <Label text="{i18n>AdicionarPersonagem.habilidades}" />
                        <List id="listaHabilidadeSelecionadas" mode="MultiSelect" items="{habilidades>/}" growing="true" growingThreshold="5">
                            <items>
                                <StandardListItem
                                    title="{habilidades>nome}"
                                    description="{habilidades>descricao}"
                                    press=".onListItemPressed"/>
                            </items>
                        </List>

                        <HBox justifyContent="End">
                            <Button icon="sap-icon://save" text="{i18n>AdicionarPersonagem.botaoSalvar}" press="adicionarPersonagem" />
                        </HBox>
                    </VBox>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>