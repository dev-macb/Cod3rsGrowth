<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    busyIndicatorDelay="0"
    controllerName="coders-growth.controller.DetalhePersonagem"
>
    <Page
        id="detalhePersonagem"
        title="Detalhes do Personagem"
        showNavButton="true"
        navButtonPress="navegarPara('personagens')"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <Panel id="painelDetalhePersonagem" width="auto" class="sapUiResponsiveMargin sapUiNoContentPadding">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{personagem>/nome} ({personagem>/id})" level="H2"/>
                        <ToolbarSpacer />	
                        <Button icon="sap-icon://edit" />
                        <Button icon="sap-icon://delete" />
                    </Toolbar>
                </headerToolbar>
                <content>
                    <f:SimpleForm editable="false" layout="ResponsiveGridLayout">
                        <f:content>
                            <Label text="Vida"/>
                            <Text text="{personagem>/vida}"/>
                            <Label text="Energia"/>
                            <Text text="{personagem>/energia}"/>
                            <Label text="Velocidade"/>
                            <Text text="{personagem>/velocidade}"/>
                            <Label text="Força"/>
                            <Text text="{path: 'personagem>/forca', formatter: '.formatter.formatarNivel'}" class='distintivo' />
                            <Label text="Inteligencia"/>
                            <Text text="{path: 'personagem>/inteligencia', formatter: '.formatter.formatarNivel'}" class='distintivo' />
                            <Label text="Propósito"/>
                            <Text text="{path: 'personagem>/eVilao', formatter: '.formatter.formatarProposito'}"/>
                        </f:content>
                    </f:SimpleForm>
					<List id="listaHabilidade" items="{ path: '/' }" growing="true" growingThreshold="10">
						<headerToolbar>
							<Toolbar>
								<Title text="{i18n>ListaHabilidade.tituloLista}" />
							</Toolbar>
						</headerToolbar>
						<items>
							<StandardListItem
								title="{nome}"
								description="{descricao}"
								type="Navigation"
								press=".onListItemPressed"/>
						</items>
					</List>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>