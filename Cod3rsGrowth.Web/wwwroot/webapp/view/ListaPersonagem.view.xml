<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="coders-growth.controller.ListaPersonagem"
>
	<Page 
        id="paginaListaPersonagem"
		title="{i18n>ListaPersonagem.titulo}"
		showNavButton="true"
		navButtonPress="__navegarPara('home')"
		class="sapUiResponsiveContentPadding"
    >
		<content>
			<Button icon="sap-icon://add" text="{i18n>ListaPersonagem.botaoAdicionar}" press=".irAdicionarPersonagem" />
			<List id="listaPersonagem" items="{ path: '/' }" growing="true" growingThreshold="10">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>ListaPersonagem.tituloLista}" />
						<ToolbarSpacer />
						<SearchField id="filtroNome" width="30%" liveChange="aoFiltrarPersonagemPorNome" />
						<Button id="btnFiltroPersonagem" icon="sap-icon://filter" press="aoAbrirFiltros" />
					</Toolbar>
				</headerToolbar>
				<items>
					<StandardListItem
						icon="{ path: 'eVilao', formatter: '.formatter.iconePersonagem' }"
						title="{nome}"
						type="Navigation"
						press=".aoClicarEmVerDetalhes"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>