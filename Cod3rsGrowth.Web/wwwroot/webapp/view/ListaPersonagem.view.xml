<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="coders-growth.controller.ListaPersonagem"
>
	<Page 
        id="paginaListaPersonagem"
		title="{i18n>Home.titulo}"
		showNavButton="true"
		navButtonPress="navegarPara('home')"
		class="sapUiResponsiveContentPadding"
    >
		<content>
			<Button icon="sap-icon://add" text="Adicionar" />
			<List id="listaPersonagem" items="{ path: '/' }" growing="true" growingThreshold="10">
				<headerToolbar>
					<Toolbar>
						<Title text="Personagens" />
						<ToolbarSpacer />
						<SearchField
							width="30%"
							liveChange="aoFiltrarPersonagemPorNome"
						/>
						<Button icon="sap-icon://filter" press="aoAbrirFiltros" />
					</Toolbar>
				</headerToolbar>
				<items>
					<StandardListItem
						icon="{ path: 'eVilao', formatter: '.formatter.iconePersonagem' }"
						title="{nome}"
						type="Navigation"
						press=".onListItemPressed"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>