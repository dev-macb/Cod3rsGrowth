<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="coders-growth.controller.ListaPersonagem"
>
	<Page 
        id="paginaListaPersonagem"
		title="{i18n>Home.titulo}"
		showNavButton="true"
		navButtonPress="navegarDeVolta"
		class="sapUiResponsiveContentPadding"
    >
		<content>
			<List id="listaPersonagem" items="{ path: '/' }">
				<headerToolbar>
					<Toolbar>
						<Title text="Personagens" />
						<ToolbarSpacer />
						<SearchField
							width="30%"
							liveChange="aoFiltrarPersonagemPorNome"
						/>
					</Toolbar>
				</headerToolbar>
				<items>
					<StandardListItem
						title="{nome} {LastName}"
						iconDensityAware="false"
						iconInset="false"
						type="Navigation"
						press=".onListItemPressed"/>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
