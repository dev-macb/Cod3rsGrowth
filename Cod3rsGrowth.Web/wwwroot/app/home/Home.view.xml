<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="coders-growth.app.home.Home">
	<Page class="sapUiResponsiveContentPadding">
		<customHeader>
			<Toolbar>
				<Title id="tituloPaginaHome" text="{i18n>geral.codersgrowth}" titleStyle="H3" />
			</Toolbar>
		</customHeader>
		<content>
			<Panel id="painelHome" width="auto" class="sapUiLargeMarginBeginEnd sapUiTinyMarginTop sapUiLargeMarginBottom sapUiResponsiveContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title id="tituloPainelHome" text="{i18n>home.titulo}" titleStyle="H3" />
					</Toolbar>
				</headerToolbar>
				<content>
					<Button id="btnVerListaPersonagem" icon="sap-icon://forward" text="{i18n>home.verListaPersonagem}" press="aoClicarEmVerListaPersonagem" class="sapUiTinyMarginEnd" />
					<Button id="btnVerListaHabilidade" icon="sap-icon://forward" text="{i18n>home.verListaHabilidade}" press="aoClicarEmVerListaHabilidade" />
				</content>
			</Panel>
			<Panel width="auto" class="sapUiLargeMarginBeginEnd sapUiTinyMarginTop sapUiResponsiveContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>home.tituloBatalhas}" titleStyle="H3" />
					</Toolbar>
				</headerToolbar>
			</Panel>
		</content>
	</Page>
</mvc:View>
