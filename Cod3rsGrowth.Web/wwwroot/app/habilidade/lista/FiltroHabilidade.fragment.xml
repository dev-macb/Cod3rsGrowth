<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:u="sap.ui.unified"
   xmlns:core="sap.ui.core"
>
    <ViewSettingsDialog id="dialogoFiltrosHabilidade" confirm="aoAplicarFiltrosHabilidade" resetFilters="aoResetarFiltrosHabilidade">
        <filterItems>
            <ViewSettingsCustomItem id="filtroDataDeCriacao" text="Data de Criação" key="dataCriacao">
                <customControl>
                    <u:Calendar id="calendario" select="tratarSelecaoDeDatas" intervalSelection="true" />
                </customControl>
            </ViewSettingsCustomItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition> 